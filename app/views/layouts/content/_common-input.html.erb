<div class="div-title mb-4">
  <p>
    <span class="title-p fw-bold text-main"><%= f.label :title, "タイトル", class: "px-1" %><span class="badge bg-primary">必須</span></span><br>
    <span class="text-red">30文字以内で入力して下さい</span><br>
  </p>
  <%= f.text_field :title, class: 'form-control py-md-3 rounded bg-white box-shadow mb-3' %>
</div>

<div class="div-title mb-4">
  <p>
    <span class="title-p fw-bold text-main"><%= f.label :category_id, "カテゴリ1", class: "px-1" %><span class="badge bg-primary">必須</span></span><br>
  </p>
  <%= select_tag "category[category_ids][]", options_from_collection_for_select(@categories, :id, :ja_name) %>
</div>
<div class="div-title mb-4">
  <p>
    <span class="title-p fw-bold text-main"><%= f.label :category_id, "カテゴリ2", class: "px-1" %><span class="badge bg-secondary">任意</span></span><br>
  </p>
  <%= select_tag "category[category_ids][]", options_from_collection_for_select(@categories, :id, :ja_name), include_blank: true %>
</div>

<div class="div-title mb-4">
  <p class="title-p fw-bold text-main">コンテンツ画像<span class="ms-1 badge bg-primary">必須</span></p>
  <%= f.file_field :image, style: 'display: inline-block;'%>
</div>
