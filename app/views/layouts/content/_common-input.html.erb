    <span class="title-p fw-bold text-main"><%= f.label :first_content, "文章１", class: "px-1" %></span><span class="badge bg-primary">必須</span><br>
  </p> 
  <%= f.text_area :first_content, class: 'form-control py-md-3 rounded bg-white box-shadow mb-3' %>
