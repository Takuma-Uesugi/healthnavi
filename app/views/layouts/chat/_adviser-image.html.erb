<% if adviser.image.present? %>
  <%= image_tag adviser.image.url, alt: 'アドバイザー画像', class: 'rounded-circle flex-shrink-0 fit-cover inline-block', width: '50px', height: '50px' %>
<% else %>
  <% if adviser.gender == 'male' %>
    <%= image_tag '男性アドバイザー.png', alt: '男性アドバイザーの画像', class: 'rounded-circle flex-shrink-0 fit-cover inline-block', width: '50px', height: '50px' %>
  <% else %>
    <%= image_tag '女性アドバイザー.png', alt: '女性アドバイザーの画像', class: 'rounded-circle flex-shrink-0 fit-cover inline-block', width: '50px', height: '50px' %>
  <% end %>
<% end %>